<Window x:Class="WpfApp.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfApp"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="646">
    <Grid>
        
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            
            <RowDefinition Height="*"/>
            
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>

        <!-- Row 0: Title spanning two columns -->
        <TextBlock Text="Medarbejder-oversigt" 
               FontSize="20" FontWeight="Bold" 
               HorizontalAlignment="Center"
               Grid.Row="0" Grid.ColumnSpan="2" />

        <!-- Row 1: ListBox in column 0 -->
        <ListBox x:Name="MedarbejderListBox" 
             Grid.Row="1" Grid.Column="0" 
             Margin="10" />

        <Grid Grid.Row="1" Grid.Column="1" HorizontalAlignment="Center" VerticalAlignment="Center"
      Name="MedarbejderInfo"
      DataContext="{Binding SelectedItem, ElementName=MedarbejderListBox}"
      Margin="10">

            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="150"/>
            </Grid.ColumnDefinitions>

            <!-- Initialer -->
            <TextBlock Text="Initialer:" Grid.Row="0" Grid.Column="0" VerticalAlignment="Center" Margin="0,0,10,5"/>
            <TextBlock Text="{Binding Initialer}" Grid.Row="0" Grid.Column="1" VerticalAlignment="Center" Margin="0,0,0,5"/>

            <!-- Navn -->
            <TextBlock Text="Navn:" Grid.Row="1" Grid.Column="0" VerticalAlignment="Center" Margin="0,0,10,5"/>
            <TextBlock Text="{Binding Navn}" Grid.Row="1" Grid.Column="1" VerticalAlignment="Center" Margin="0,0,0,5"/>

            <!-- CPR-nummer -->
            <TextBlock Text="CPR-nummer:" Grid.Row="2" Grid.Column="0" VerticalAlignment="Center" Margin="0,0,10,5"/>
            <TextBlock Text="{Binding CPRNummer}" Grid.Row="2" Grid.Column="1" VerticalAlignment="Center" Margin="0,0,0,5"/>

            <!-- Afdeling -->
            <TextBlock Text="Afdeling:" Grid.Row="3" Grid.Column="0" VerticalAlignment="Center" Margin="0,0,10,5"/>
            <TextBlock Text="{Binding Afdeling.Navn}" Grid.Row="3" Grid.Column="1" VerticalAlignment="Center" Margin="0,0,0,5"/>

            <!-- Vis Tidsregistreringer-knap -->
            <Button x:Name="TidsregistreringerButton" Content="Tidsregistreringer" Grid.Row="4" Grid.Column="0" Grid.ColumnSpan="2" Margin="0,10,0,0" Width="150" Click="TidsregistreringerAction"/>
        </Grid>






        <!-- Row 2: Button spanning both columns -->
        <Button x:Name="OpretMedarbejderButton" Content="Opret Ny Medarbejder" 
            Grid.Row="2" 
            Height="30" Width="200"
            HorizontalAlignment="Center"
            Margin="20" Grid.Column="0" Click="OpretMedarbejderAction"/>

        <Button Content="Slet Medarbejder" 
            Grid.Row="2" 
            Height="30" Width="200"
            HorizontalAlignment="Center"
            Margin="20" Grid.Column="1"/>

        <Button Content="Arbejds-sager" 
        Grid.Row="3" Grid.ColumnSpan="2"
        Height="30" Width="200"
        HorizontalAlignment="Center"
        Margin="10" />




    </Grid>

</Window>
